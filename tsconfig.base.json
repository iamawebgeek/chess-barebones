{
  "compilerOptions": {
    /* Common, modern defaults for a pnpm + turbo monorepo */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Emission settings mainly used by libraries via tsup (dts generation) */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
